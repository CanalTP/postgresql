#!/bin/sh
su - postgres -c 'touch /tmp/nsrpre.log'
date >> /tmp/nsrpre.log
export >> /tmp/nsrpre.log

id >> /tmp/nsrpre.log

su - postgres -c "/usr/bin/pg_basebackup -p 5432 -U replicator -w -D /var/lib/postgresql/9.4/main/backup/basebackup -X stream -F plain --verbose -h 127.0.0.1 2>&1 | tee -a /tmp/nsrpre.log "
